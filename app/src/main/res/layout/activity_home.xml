<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F7FB">

    <!-- Scrollable Top Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Greeting Text -->
            <TextView
                android:id="@+id/greetingTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Good Morning ðŸ”¥"
                android:textSize="14sp"
                android:textColor="#333"
                android:layout_marginTop="8dp" />

            <!-- User Name -->
            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jenika Kotak"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_marginBottom="8dp" />


            <!-- BMI Display -->
            <TextView
                android:id="@+id/bmiStatusTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BMI Status: --"
                android:textSize="16sp"
                android:textColor="#666"
                android:layout_marginBottom="16dp" />

            <!-- Search Bar -->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Search"
                android:background="@android:drawable/editbox_background"
                android:padding="12dp"
                android:layout_marginBottom="24dp" />

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Popular Workouts"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_marginBottom="12dp" />

            <!-- Static Workout Cards -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Card 1 -->
                    <LinearLayout
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:background="@android:drawable/dialog_holo_light_frame"
                        android:layout_marginEnd="12dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:src="@drawable/ic_launcher_background"
                            android:scaleType="centerCrop"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lower Body Training"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="500 Kcal â€¢ 50 min"
                            android:textSize="14sp"
                            android:textColor="#666" />
                    </LinearLayout>

                    <!-- Card 2 -->
                    <LinearLayout
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:background="@android:drawable/dialog_holo_light_frame">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:src="@drawable/ic_launcher_background"
                            android:scaleType="centerCrop"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hand Training"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="600 Kcal â€¢ 40 min"
                            android:textSize="14sp"
                            android:textColor="#666" />
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>

            <!-- Dynamic Injection Container -->
            <LinearLayout
                android:id="@+id/exerciseListLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp" />

            <!-- User Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Users"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+ Add User"
                    android:backgroundTint="#6200EE"
                    android:textColor="#FFFFFF"
                    android:elevation="4dp" />
            </LinearLayout>

            <!-- Static User Cards -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- User 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:background="@android:drawable/dialog_holo_light_frame"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_launcher_background"
                        android:scaleType="centerCrop"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ajayakumar"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+91 9789007656"
                            android:textSize="14sp"
                            android:textColor="#666" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Intermediate"
                            android:textSize="12sp"
                            android:textColor="#008080" />
                    </LinearLayout>
                </LinearLayout>

                <!-- User 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:background="@android:drawable/dialog_holo_light_frame">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_launcher_background"
                        android:scaleType="centerCrop"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Udhayaraj"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+91 8733446556"
                            android:textSize="14sp"
                            android:textColor="#666" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Beginner"
                            android:textSize="12sp"
                            android:textColor="#FF5722" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Nav Polished -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#0D3B66"
        android:padding="8dp">

        <ImageView
            android:id="@+id/viewIcon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="8dp"
            android:src="@android:drawable/ic_menu_view"
            android:scaleType="centerInside"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="#FFFFFF" />

        <ImageView
            android:id="@+id/infoIcon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="8dp"
            android:src="@android:drawable/ic_menu_info_details"
            android:scaleType="centerInside"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="#FFFFFF" />

        <ImageView
            android:id="@+id/settingsIcon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="8dp"
            android:src="@android:drawable/ic_menu_manage"
            android:scaleType="centerInside"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="#FFFFFF" />
    </LinearLayout>


</LinearLayout>
